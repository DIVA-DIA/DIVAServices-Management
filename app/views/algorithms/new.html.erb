<%= simple_form_for(@algorithm) do |f| %>
  <%= f.input :name %>
  <%= f.input :namespace %>
  <%= f.input :description, as: :text %>
  <%= f.simple_fields_for :algorithm_info do |ff| %>
    <% AlgorithmInfo.algorithm_info_attributes.each do |k,v| %>
      <%= ff.input k.to_sym %>
    <% end %>
  <% end %>
  <%= f.simple_fields_for :input_parameters do |fff| %>
    <%= render partial: 'input_parameters/form', locals: { f: fff } %>
  <% end %>
  <%= f.submit 'Submit' %>
<% end %>
