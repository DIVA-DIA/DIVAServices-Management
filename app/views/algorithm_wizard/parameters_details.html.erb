<h1>Algorithm Wizard - Step 3/4</h1>


<p></p>

<%= simple_form_for(@algorithm, url: wizard_path, method: :put) do |f| %>

  <%= f.simple_fields_for :input_parameters do |ff| %>

    <%= ff.input :input_type, collection: InputParameter.possible_input_types, disabled: true %>
    <%= ff.simple_fields_for :fields do |fff| %>
      <%= render partial: 'field', locals: { f: fff } %>
    <% end %>
  <% end %>

  <%= f.submit 'Next' %>
  <%= link_to 'Back', previous_wizard_path %>
  <%= link_to 'Cancel', algorithms_path %>
<% end %>
