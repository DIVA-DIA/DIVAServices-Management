<h1>Algorithm Wizard - Step 4/4</h1>
<%= progress_bar(4) %>

<h2>Algorithm</h2>

<p>Please upload your algorithm</p>

<%= simple_form_for(@algorithm, url: wizard_path, method: :put, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :zip_file %>
  <%= f.input :language, collection: DivaServiceApi.available_languages %>

  <%= link_to 'Back', previous_wizard_path, class: 'btn btn-default' %>
  <%= link_to 'Cancel', algorithms_path, class: 'btn btn-default' %>
  <%= f.submit 'Finish', class: 'btn btn-primary' %>
<% end %>
