<h1>Algorithm Wizard - Step 4/4</h1>

<p>Please upload your algorithm</p>

<%= simple_form_for(@algorithm, url: wizard_path, method: :put, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :zip_file %>
  <%= f.input :language, collection: Algorithm.available_languages %>

  <%= f.submit 'Upload' %>
  <%= link_to 'Back', previous_wizard_path %>
  <%= link_to 'Cancel', algorithms_path %>
<% end %>
