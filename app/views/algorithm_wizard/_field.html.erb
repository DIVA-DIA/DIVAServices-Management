<% unless f.object.type == 'ObjectField' %>
  <%= f.input :value, label: f.object.name, placeholder: '', required: f.object.required %>
  <%= f.hint f.object.infoText unless f.object.infoText.nil? %>
<% end %>

<% if f.object.type == 'ObjectField' %>
  <%= f.simple_fields_for :fields do |ff| %>
    <%= render partial: 'field', locals: { f: ff } %>
  <% end %>
<% end %>
